# Program: recursive turtle

import turtle

def triangle(t, length):
    if length > 10:
        for _ in range(3):
            t.forward(length)
            t.left(120)
        triangle(t, length / 2)

def nestedTriangle(t, length):
    if length > 10:
        total_distance = 0
        for _ in range(3):
            t.forward(length)
            total_distance += length
            t.left(120)
        total_distance += nestedTriangle(t, length / 2)  # Add the distance from recursive call
        return total_distance
    return 0
