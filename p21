# Program: age checker

while True:
    user_input = input("Enter a non-negative integer: ")

    if user_input.isdigit():
        number = int(user_input)
        if number >= 0:
            break
        else:
            print("Invalid input. Please enter a non-negative integer.")
    else:
        print("Invalid input. Please enter a non-negative integer.")

print(f"You entered: {number}")
