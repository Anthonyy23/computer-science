// Program: Seasonal Greeting Based on Month

#include <iostream>
using namespace std;

int main() {
    int month;

    // User input for month number
    cout << "Enter month (as a number): ";
    cin >> month;

    // Check for the season based on the month
    if (month < 3 || month > 11) {
        cout << "Happy Winter" << endl;
    } else if (month >= 3 && month < 7) {
        cout << "Happy Spring" << endl;
    } else if (month >= 7 && month < 9) {
        cout << "Happy Summer" << endl;
    } else {
        cout << "Happy Fall" << endl;
    }

    return 0;
}
