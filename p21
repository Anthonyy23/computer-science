# Program: recursive turtle

import turtle

def triangle(t, length):
    if length > 10:
        for _ in range(3):
            t.forward(length)
            t.left(120)
        triangle(t, length / 2)

def nestedTriangle(t, length):
    if length > 10:
        for _ in range(3):
            t.forward(length)
            t.left(120)
        nestedTriangle(t, length / 2)

screen = turtle.Screen()
t = turtle.Turtle()

length = int(input("Enter edge length: "))

triangle(t, length)

t.hideturtle()
screen.mainloop()
